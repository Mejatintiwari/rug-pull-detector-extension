{
    "manifest_version": 3,
    "name": "Rug Pull Detector",
    "version": "1.0",
    "description": "Analyze Pump.fun and DexScreener for rug pull risk.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://pump.fun/*", "https://dexscreener.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  